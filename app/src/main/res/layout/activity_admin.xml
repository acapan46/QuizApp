<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wallpaper">

    <TextView
        android:id="@+id/txtQuiz"
        android:layout_width="249dp"
        android:layout_height="127dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/blackwagoon"
        android:text="Quiz"
        android:textColor="@color/dark_blue"
        android:textSize="90dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtHello"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp" />

    <TextView
        android:id="@+id/txtApp"
        android:layout_width="115dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/butterfly"
        android:text="admin"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtQuiz"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="242dp" />

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Hello Admin!!"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnLogout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAddQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#00008B"
        android:fontFamily="@font/blackwagoon"
        android:text="add question"
        android:textSize="30dp"
        app:iconPadding="10dp"
        app:iconTintMode="src_over"
        app:layout_constraintTop_toBottomOf="@+id/txtQuiz"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnUpdateQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00008B"
        android:fontFamily="@font/blackwagoon"
        android:text="update question"
        android:textSize="30dp"
        app:iconPadding="10dp"
        app:iconTintMode="src_over"
        app:layout_constraintTop_toBottomOf="@+id/btnAddQuestion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnDelQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00008B"
        android:fontFamily="@font/blackwagoon"
        android:text="Delete Question"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateQuestion"
        app:layout_constraintVertical_bias="0.151"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exit"
        android:backgroundTint="@color/black"
        android:text="Button"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>